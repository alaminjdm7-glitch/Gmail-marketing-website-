<body>

    <div id="auth">
        <h1 style="color:var(--primary);">RGH SHOP</h1>
        <p>Login to continue</p>
        <input type="email" id="email" class="input-box" placeholder="Email">
        <input type="password" id="pass" class="input-box" placeholder="Password">
        <button class="btn" onclick="auth(true)">LOGIN</button>
        <button class="btn" style="background:transparent; color:var(--primary); border:1px solid var(--primary);" onclick="auth(false)">CREATE ACCOUNT</button>
    </div>

    <div id="app" style="display:none;">
        <div class="header">
            <div class="logo">RGH SHOP</div>
            <div class="balance">৳ <span id="headBal">0</span></div>
        </div>

        <div id="home" class="page active">
            <h3 style="color:var(--primary); margin:15px 0;">Available Products</h3>
            <div id="products">Loading...</div>
        </div>

        <div id="wallet" class="page">
            <div class="wallet-card">
                <h3>My Balance</h3>
                <h1 style="margin:10px 0;">৳ <span id="wallBal">0</span></h1>
            </div>
            <div style="background:white; padding:15px; border-radius:10px; margin-bottom:20px;">
                <p id="payNums" style="font-size:13px; line-height:1.6; color:#555;">Loading...</p>
            </div>
            <h3>Add Money</h3>
            <input type="number" id="depAmt" class="input-box" placeholder="Amount">
            <input type="text" id="depTrx" class="input-box" placeholder="TrxID">
            <button class="btn" onclick="deposit()">SUBMIT DEPOSIT</button>
        </div>

        <div id="history" class="page">
            <h3>My History</h3>
            <div id="histList"></div>
        </div>

        <div class="nav">
            <div class="nav-item active" onclick="go('home')"><i class="fa-solid fa-house"></i>Home</div>
            <div class="nav-item" onclick="go('wallet')"><i class="fa-solid fa-wallet"></i>Wallet</div>
            <div class="nav-item" onclick="go('history')"><i class="fa-solid fa-clock-rotate-left"></i>History</div>
        </div>
    </div>

    <!-- Success Popup -->
    <div id="successPopup" class="success-popup">
        <i class="fa-solid fa-circle-check success-icon"></i>
        <h3>Success!</h3>
        <p id="successMsg">Request Submitted.</p>
        <button class="btn" onclick="document.getElementById('successPopup').style.display='none'">OK</button>
    </div>

    <script type="module">
        import { initializeApp } from "https://www.gstatic.com/firebasejs/9.22.0/firebase-app.js";
        import { getDatabase, ref, onValue, push, update } from "https://www.gstatic.com/firebasejs/9.22.0/firebase-database.js";
        import { getAuth, signInWithEmailAndPassword, createUserWithEmailAndPassword, onAuthStateChanged } from "https://www.gstatic.com/firebasejs/9.22.0/firebase-auth.js";

        // ⚠️ আপনার কনফিগ নিচে বসান
        const firebaseConfig = {
            apiKey: "AIzaSyD9hofXZ17h4t0H1W1swRMqq2uI24aDJlg",
            authDomain: "rgh-game-shop.firebaseapp.com",
            databaseURL: "https://rgh-game-shop-default-rtdb.firebaseio.com",
            projectId: "rgh-game-shop",
            storageBucket: "rgh-game-shop.firebasestorage.app",
            messagingSenderId: "1001875001812",
            appId: "1:1001875001812:web:b5bfd167ce5f20521a4641"
        };

        const app = initializeApp(firebaseConfig);
        const db = getDatabase(app);
        const auth = getAuth(app);
        let user = null;

        onAuthStateChanged(auth, u => {
            if(u) {
                user = u;
                document.getElementById('auth').style.display='none';
                document.getElementById('app').style.display='block';
                initApp();
            } else {
                document.getElementById('auth').style.display='flex';
                document.getElementById('app').style.display='none';
            }
        });

        // --- AUTH & DATA SAVING (IMPORTANT FIX) ---
        window.auth = (isLogin) => {
            const e = document.getElementById('email').value;
            const p = document.getElementById('pass').value;
            const method = isLogin ? signInWithEmailAndPassword : createUserWithEmailAndPassword;
            
            method(auth, e, p)
            .then((cred) => {
                if(!isLogin) {
                    // Sign Up করলে ইউজারের ডাটা সেভ হবে (যাতে এডমিন ব্যালেন্স কন্ট্রোল করতে পারে)
                    update(ref(db, `users/${cred.user.uid}`), {
                        email: e,
                        balance: 0
                    });
                }
            })
            .catch(err => alert(err.message));
        }

        function initApp() {
            // Balance
            onValue(ref(db, `users/${user.uid}/balance`), s => {
                const bal = s.val() || 0;
                document.getElementById('headBal').innerText = bal;
                document.getElementById('wallBal').innerText = bal;
            });

            // Settings
            onValue(ref(db, 'settings'), s => {
                const d = s.val();
                if(d?.payment) {
                    document.getElementById('payNumbers').innerHTML = 
                        `Bkash: <b>${d.payment.bkash}</b><br>Nagad: <b>${d.payment.nagad}</b>`;
                }
            });

            // Products
            const cats = ['uid_topup', 'weekly_monthly', 'airdrop'];
            const container = document.getElementById('products');
            container.innerHTML = "";
            
            cats.forEach(c => {
                onValue(ref(db, `products/${c}`), s => {
                    const data = s.val();
                    if(data) {
                        let html = `<h4 style="margin:10px 0; text-transform:uppercase; color:#4b0082;">${c.replace('_',' ')}</h4><div class="grid">`;
                        Object.values(data).forEach(p => {
                            const isStock = p.stock === undefined ? true : p.stock;
                            html += `
                            <div class="card ${isStock?'':'stock-out'}">
                                ${isStock?'':'<div class="badge">STOCK OUT</div>'}
                                <img src="${p.image}">
                                <div style="font-size:12px;">${p.name}</div>
                                <div class="price">৳ ${p.price}</div>
                            </div>`;
                        });
                        html += `</div>`;
                        const div = document.createElement('div');
                        div.innerHTML = html;
                        container.appendChild(div);
                    }
                }, {onlyOnce:true});
            });

            // History
            onValue(ref(db, 'orders'), s => {
                const list = document.getElementById('histList');
                list.innerHTML = "";
                const arr = [];
                s.forEach(c => arr.push(c.val()));
                arr.reverse();
                
                arr.forEach(o => {
                    if(o.userId === user.uid) {
                        list.innerHTML += `
                        <div style="background:white; padding:10px; margin-bottom:10px; border-radius:8px; display:flex; justify-content:space-between; align-items:center;">
                            <div>
                                <b>${o.item}</b>
                                <div style="font-size:11px; color:gray;">${new Date(o.time).toLocaleDateString()}</div>
                            </div>
                            <div style="text-align:right;">
                                <div style="color:${o.status==='Success'?'green':'orange'}; font-weight:bold;">${o.status}</div>
                                <b>৳ ${o.price}</b>
                            </div>
                        </div>`;
                    }
                });
            });
        }

        window.deposit = () => {
            const amt = document.getElementById('depAmt').value;
            const trx = document.getElementById('depTrx').value;
            
            if(!amt || !trx) return alert("Fill fields!");

            push(ref(db, 'orders'), {
                userId: user.uid,
                email: user.email,
                item: `Add Money (${amt})`,
                price: amt,
                trx: trx,
                type: 'Deposit',
                status: 'Pending',
                time: Date.now()
            }).then(() => {
                // সুন্দর পপ-আপ মেসেজ
                document.getElementById('successMsg').innerText = "Deposit Request Submitted! Wait for Admin Approval.";
                document.getElementById('successPopup').style.display = 'block';
                
                document.getElementById('depAmt').value = "";
                document.getElementById('depTrx').value = "";
            });
        }

        window.go = (id) => {
            document.querySelectorAll('.page').forEach(e => e.classList.remove('active'));
            document.querySelectorAll('.nav-item').forEach(e => e.classList.remove('active'));
            document.getElementById(id).classList.add('active');
            event.currentTarget.classList.add('active');
        }
    </script>
</body>
</html>
