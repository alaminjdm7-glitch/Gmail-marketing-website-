        /* SUCCESS POPUP */
        .success-popup { display: none; position: fixed; top: 50%; left: 50%; transform: translate(-50%, -50%); background: white; padding: 30px; border-radius: 15px; box-shadow: 0 10px 30px rgba(0,0,0,0.2); z-index: 3000; text-align: center; width: 80%; }
        .success-icon { font-size: 50px; color: #27ae60; margin-bottom: 15px; }
